<% BillFolder.all_bills.each do |bill| %>
  <tr>
    <td><%= bill.since %></td>
    <td><%= bill.till %></td>
    <td><%= bill.total_amount %></td>
    <td><i class="fa fa-search fa-fw"></i> <%= link_to 'Detalles', calls_path, class: 'btn btn-primary' %></td>
    <td><i class="fa fa-trash fa-fw"></i> <%= link_to 'Borrar', bill_path(bill),
                    method: :delete,
                    data: { confirm: 'Estas seguro?' },
                    class: 'btn btn-danger' %></td>
  </tr>
<% end %>