<h1>Pedir factura</h1>
<%= form_for([@biller, @biller.bills.build]) do |f| %>
    <p>
      <%= f.label :since, 'Desde' %><br>
      <%= f.datetime_select :since %>
    </p>
    <p>
      <%= f.label :until, 'Hasta' %><br>
      <%= f.datetime_select :until %>
    </p>
    <p>
      <%= f.label :amount, 'Total' %><br>
      <%= f.number_field :amount %>
    </p>
    <p>
      <%= f.label :calls %><br>
      <%= f.text_field :calls %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

<h2>Facturas</h2>
<% @biller.bills.each do |bill| %>
    <p>
      <strong>Desde:</strong>
      <%= bill.since %>
    </p>

    <p>
      <strong>Hasta:</strong>
      <%= bill.until %>
    </p>

    <p>
      <strong>Monto:</strong>
      <%= bill.total_amount %>
    </p>

    <p>
      <strong>Detalles:</strong>
      <%= bill.calls %>
    </p>
<% end %>